<style>
    :root {
        --custom-color: #8b5cf6;
        --rale-way : "Raleway", sans-serif;
        --bg-footer: #272829;
        --primary: #E55472;
    }
    ::-webkit-scrollbar {
       display: none;
       width: 10px
    }
    ::-webkit-scrollbar-thumb {
        background-color: var(--primary);
        border-radius: 10px;
        border: 3px solid #f1f1f1;
    }
    /* Button View Cart */
    .btn-view {
        position: relative;
        display: inline-block;
        padding: 5px 10px;
        width: 100px;
        border: none;
        outline: none;
        font-size: 16px;
        border-radius: 0.25rem;
        background-color: var(--primary);
        color: #f1f1f1;
        cursor: pointer;
        z-index: 1;
        margin: 1rem;
        transition: 0.5s;
        border: #272829;
        }
    .btn-view-cart::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 0%;
        height: 100%;
        transition: width 0.3s ease-in-out;
        background-color: white;
        border: 1px solid #272829;
        border-radius: 0.25rem;
        z-index: -1;
        }

    .btn-view-cart:hover {
       color: #272829;
    }

    .btn-view-cart:hover::before {
       width: 100%;
    }

    /* Button view cart*/
    .btn-check {
        position: relative;
        display: inline-block;
        padding: 5px 10px;
        width: 100px;
        border: none;
        outline: none;
        font-size: 16px;
        border-radius: 0.25rem;
        background-color: var(--bg-footer);
        color: #f1f1f1;
        cursor: pointer;
        z-index: 1;
        margin: 1rem;
        transition: 0.5s;
        border: #272829;
        }
    .btn-checkout::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 0%;
        height: 100%;
        transition: width 0.3s ease-in-out;
        background-color: white;
        border-radius: 0.25rem;
        z-index: -2;
        border: 1px solid #272829;
    }

    .btn-checkout:hover {
        color: var(--bg-footer);
    }

    .btn-checkout:hover::before {
        width: 100%;
    }
</style>
