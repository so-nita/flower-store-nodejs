<!-- Font Raleway-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,100..900;1,100..900&family=Lunasima:wght@400;700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<!-- CDN scroll reval -->
<script src="https://unpkg.com/scrollreveal"></script>

<!-- CDN swiper slide -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<style>
    :root {
        --custom-color: #8b5cf6;
        --rale-way : "Raleway", sans-serif;
        --montserrat:"Montserrat", sans-serif,
        --poppins:'Poppins', sans-serif;
        --bg-footer: #272829;
        --primary: #E55472;
        --gray: #919598;
        --green: #9AC45C;
    }
    ::-webkit-scrollbar {
       display: none;
       width: 10px
    }
    ::-webkit-scrollbar-thumb {
        background-color: var(--primary);
        border-radius: 10px;
        border: 3px solid #f1f1f1;
    }
    /* Button View Cart */
    .btn-view {
        position: relative;
        display: inline-block;
        padding: 5px 10px;
        width: 100px;
        border: none;
        outline: none;
        font-size: 16px;
        border-radius: 0.25rem;
        background-color: var(--primary);
        color: #f1f1f1;
        cursor: pointer;
        z-index: 1;
        margin: 1rem;
        transition: 0.5s;
        border: #272829;
        }
    .btn-view-cart::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 0%;
        height: 100%;
        transition: width 0.3s ease-in-out;
        background-color: white;
        border: 1px solid #272829;
        border-radius: 0.25rem;
        z-index: -1;
        }

    .btn-view-cart:hover {
       color: #272829;
    }

    .btn-view-cart:hover::before {
       width: 100%;
    }
    /* Button view cart*/
    .btn-check {
        position: relative;
        display: inline-block;
        padding: 5px 10px;
        width: 100px;
        border: none;
        outline: none;
        font-size: 16px;
        border-radius: 0.25rem;
        background-color: var(--bg-footer);
        color: #f1f1f1;
        cursor: pointer;
        z-index: 1;
        margin: 1rem;
        transition: 0.5s;
        border: #272829;
        }

    .btn-checkout::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 0%;
        height: 100%;
        transition: width 0.3s ease-in-out;
        background-color: white;
        border-radius: 0.25rem;
        z-index: -2;
        border: 1px solid #272829;
    }

    .btn-checkout:hover {
        color: var(--bg-footer);
    }

    .btn-checkout:hover::before {
        width: 100%;
    }

    /* Card product */
    .card-product {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .card-overlay {
        position: absolute;
        bottom: 0;
        width: 100%;
        opacity: 0;
        transform: translateY(100%);
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .group:hover .card-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    /* hover on svg icon */
    .hover\:text-\[\-\-primary\]:hover svg {
        fill: var(--primary);
        transition: all 0.3s linear;
    }

    /* Back to top button */
    #back-to-top {
        width: 40px;
        height: 40px;
        background: white;
        border: none;
        outline: none;
        position: fixed;
        bottom: 40px;
        right: 40px;
        cursor: pointer;
        transform: rotate(45deg);
        box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
        transition: box-shadow 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }
        
    #back-to-top:hover {
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        background-color: var(--primary);
        transition: 0.3s all linear;
    }

    #back-to-top svg {
        transform: rotate(-45deg);
        transition: fill 0.3s ease;
    }

    #back-to-top:hover svg path {
        fill: white;
    }

    /* swiper button next & prev */
    .swiper-button-next {
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    }

    .swiper-button-prev {
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    }

    .swiper-button-next::after,
    .swiper-button-prev::after {
        font-size: 18px;
    }

    /* Modal */
    #cartModal {
        display: none;
     }
</style>
